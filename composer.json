{
  "name": "tygapay/tygabank",
  "description": "TygaBank (TygaPay) PHP SDK with Laravel 12 integration",
  "type": "library",
  "license": "MIT",
  "require": {
    "php": "^8.3",
    "psr/http-client": "^1.0",
    "psr/http-message": "^1.1 || ^2.0",
    "psr/log": "^3.0",
    "guzzlehttp/guzzle": "^7.9 || ^8.0"
  },
  "require-dev": {
    "laravel/pint": "^1.17"
  },
  "suggest": {
    "guzzlehttp/guzzle": "Use the provided Guzzle adapter (recommended)",
    "nyholm/psr7": "PSR-7 implementation for advanced usage"
  },
  "autoload": {
    "psr-4": {
      "TygaPay\\TygaBank\\": "src/"
    },
    "files": [
      "src/Laravel/helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "TygaPay\\TygaBank\\Tests\\": "tests/"
    }
  },
  "config": {
    "sort-packages": true
  },
  "extra": {
    "laravel": {
      "providers": [
        "TygaPay\\TygaBank\\Laravel\\TygaBankServiceProvider"
      ]
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
